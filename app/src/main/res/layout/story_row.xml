<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/storyCv"
    style="@style/MyCardView"
    app:cardElevation="@dimen/dimen_2dp"
    app:cardCornerRadius="@dimen/dimen_4dp"
    android:layout_marginHorizontal="@dimen/dimen_5dp"
    android:layout_marginBottom="@dimen/dimen_5dp"
    android:background="@color/primaryColor"
    app:cardBackgroundColor="@color/primaryColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/storyImageIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:foreground="@color/imgOverlay"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/storyNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_18sp"
                    android:padding="@dimen/dimen_5dp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/authorNameAndDateTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dimen_16sp"
                        android:padding="@dimen/dimen_5dp"
                        android:textColor="@color/primaryTextColor"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/premiumIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_premium"
                android:background="@null"
                android:tint="@color/gold"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
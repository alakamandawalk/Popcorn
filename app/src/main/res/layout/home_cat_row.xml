<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/primaryColor"
    android:layout_marginHorizontal="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_220dp">

        <ImageView
            android:id="@+id/catImgIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:foreground="@color/imgOverlay"/>

        <TextView
            android:id="@+id/catStoryCountTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dimen_5dp"
            android:textColor="@color/categoryRowBottomTextColor"
            android:background="@color/categoryRowBottomLineColor"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/catNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_22sp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:padding="@dimen/dimen_5dp"/>


</LinearLayout>